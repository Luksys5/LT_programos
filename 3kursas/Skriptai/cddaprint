#!/usr/bin/perl -w

use strict;

$, = "\t";
$\ = "\n";

my $buffersz = 1024;
my $words = $buffersz/2;
my $data = "";

my $rawfile;
for $rawfile (@ARGV) {
    open( RAW, "$rawfile" ) or die( "can't open file '$rawfile': $!" );

    while( read( RAW, $data, $buffersz ) ) {
	my @data = unpack( "v$words", $data );
	my $i;
	for $i (0..$#data/2) {
	    print $data[$i], $data[$i+1];
	}
    }

    close( RAW );
}
