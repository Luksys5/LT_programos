#*
# Try to generate a unique n-letter "crunched" signature from the long
# name
#**

use strict;
use GetOptions;
use Crunch;

my $length = 4;
my @args = ();

getOptions({
    "-l,--length" => [ \$length, "<n>    crunch names to <n> characters" ],
    "--help,--usage" => [
        sub {
            $0 =~ m|/(.*)$|;
            print "Usage:\n     $1 [options]  long_name_1  long_name_3 ...\n";
            GetOptions::printUsage();
	    exit;
        },
        "print short usage message (this message) and exit"
    ],
});

foreach( @ARGV ) {
   print crunch( $_, $length ), "\n";
} 
