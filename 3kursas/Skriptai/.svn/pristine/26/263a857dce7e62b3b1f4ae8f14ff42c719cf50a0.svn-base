#!/bin/sh

set -ue

SCRIPT_NAME="$(basename $0 | awk -F- '{print $2}')"
SCRIPT_DIRS="$(dirname $0) ${HOME}/scripts"

for DIR in ${SCRIPT_DIRS}
do
    SCRIPT=${DIR}/${SCRIPT_NAME}.rasm
    if [ -f "${SCRIPT}" ]
    then
	break
    fi
done

if [ ! -f "${SCRIPT}" ]
then
    echo "$0: could not find script '`basename ${SCRIPT}`'" >&2
    echo "$0: (searched in directories ${SCRIPT_DIRS})'" >&2
    exit 1
fi

rasmol -script ${SCRIPT} ${1+"$@"}
