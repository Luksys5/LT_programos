#*
#  This script removed trailing spaces from all lines of a given text
#  file.
#  Usage:
#       spacekill [options] file1.txt [file2.txt ...] > result.txt
#       spacekill -i file1.txt file2.txt
#**

use strict;
use SOptions;
use SUsage;

@ARGV = getOptions(
    "-i,--in-place"  => sub{ $^I = "~" },
    "--help,--usage" => sub { SUsage::usage; exit },
);

$\ = "\n";

while(<>) {
    s/\s+$//;
    print
}
