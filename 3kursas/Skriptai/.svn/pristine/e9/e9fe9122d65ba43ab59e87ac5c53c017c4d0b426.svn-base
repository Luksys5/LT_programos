use strict;

my $subseq = shift( @ARGV );
my $sequence = join( "", grep !/^\s*#/, <>);
$sequence =~ s/\s+//g;

my $pos = 0;

while( ($pos = index( $sequence, $subseq, $pos )) >= 0 ) {
    printf "%4d: ", $pos+1;
    print substr( $sequence, $pos ), "\n";
    $pos++;
}
