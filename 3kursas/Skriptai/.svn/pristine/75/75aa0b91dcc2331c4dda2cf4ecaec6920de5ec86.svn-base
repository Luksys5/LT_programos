#!/bin/sh
#------------------------------------------------------------------------------
#$Author$
#$Date$
#$Revision$
#$URL$
#------------------------------------------------------------------------------
#*
# Test for the 'prepare' script.
# Test whether '.interact' script is called correctly.
#**

set -ue

#BEGIN DEPEND------------------------------------------------------------------

INPUT_SCRIPT=prepare

#END DEPEND--------------------------------------------------------------------

unset LANG
unset LC_CTYPE

WD=`pwd`

prepare=${WD}/${INPUT_SCRIPT}

DIR=$(dirname $0)

TSTDIR=${DIR}/outputs

TEMPLATE=interactive

cd ${TSTDIR}

basename `pwd`

rm -rf ${TEMPLATE}

${prepare} --no-svn --template-dir ../templates -i ${TEMPLATE}

echo ""
ls -1a ${TEMPLATE}

TEST_FILE=${TEMPLATE}/file.txt

echo ""
echo === ${TEST_FILE} ===
cat ${TEST_FILE}
