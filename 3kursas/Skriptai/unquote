#! /bin/sh
#!perl -w # --*- Perl -*--
eval 'exec perl -x $0 ${1+"$@"}'
    if 0;
#------------------------------------------------------------------------------
#$Author:$
#$Date:$ 
#$Locker:$
#$Revision:$
#$Source:$
#$State:$
#------------------------------------------------------------------------------
#*
#  Convert Quoted-printable representation (=0A=0B) back to 8-bit characters
#**

use strict;

while(<>) {
    s/=\n//;
    while( m/=([0-9A-F][0-9A-F])/ ) {
	my $code = $1;
	my @val = unpack( "CC", $code );
	my $val = ( $val[0] - ($val[0]>=48&&$val[0]<=57?48:65-10) ) * 16 +
	          ( $val[1] - ($val[1]>=48&&$val[1]<=57?48:65-10) );
	s/=([0-9A-F][0-9A-F])/pack("C",$val)/e;
    }
    print;
}
